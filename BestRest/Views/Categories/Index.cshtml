@{
  Layout = "_Layout";
}

@using BestRest.Models;
@model List<BestRest.Models.Category>;


<h1>Cuisines</h1>

@if (Model.Count == 0)
{
  <h3>No Cuisines have been added yet!</h3>
}

@foreach (Category category in Model)
{
  <li>@Html.ActionLink($"{category.Name}", "Details", new {id = category.CategoryId})</li>
}
<br>
 @using (Html.BeginForm())
  {
    @Html.Label("Search a cuisine")
    @Html.TextBox("Name")
    <input type="submit" value="Search!" class="btn btn-info btn-sm"/>
  }
<br>
<p>@Html.ActionLink("Add new cuisine", "Create", null, null, new { @class = "btn btn-info btn-sm" })</p>
<p>@Html.ActionLink("Show all cuisines", "Index", null, null, new { @class = "btn btn-info btn-sm" })</p>