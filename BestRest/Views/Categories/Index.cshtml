@{
  Layout = "_Layout";
}

@using BestRest.Models;
@model List<BestRest.Models.Category>;


<h1>Categories</h1>

@if (Model.Count == 0)
{
  <h3>No Categories have been added yet!</h3>
}

@foreach (Category category in Model)
{
  <li>@Html.ActionLink($"{category.Name}", "Details", new {id = category.CategoryId})</li>
}
<br>
 @using (Html.BeginForm())
  {
    @Html.Label("Search a category")
    @Html.TextBox("Name")
    <input type="submit" value="Search!" />
  }
<br>
<p>@Html.ActionLink("Add new category", "Create")</p>