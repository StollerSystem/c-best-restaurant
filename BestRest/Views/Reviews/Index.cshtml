@{
  Layout = "_Layout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@using BestRest.Models;
@model List<BestRest.Models.Review>;

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
  <h3>No reviews have been added yet!</h3>
} 
@* <p>@Model.Count Reviews</p> *@
@foreach (Review review in Model)
{
  <li>@Html.ActionLink($"{review.Name}", "Details", new { id = review.ReviewId }) | @review.Restaurant.Name | 
    @for (int i=1;i<=@review.Stars;i++)
  {
    <span class="fa fa-star checked"></span>
  }
  @for (int i=1;i<=5-@review.Stars;i++)
  {
    <span class="fa fa-star"></span>
  }  
  </li>
  @* <li>@Html.ActionLink($"{review.Name}", "Details", new { id = review.ReviewId | })</li> *@
  @* <li>@review.Name</li> *@
}

<p>@Html.ActionLink("Add new review", "Create")</p>

<p>@Html.ActionLink("Review", "Index")</p>