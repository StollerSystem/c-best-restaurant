@{
  Layout = "_Layout";
}

@using BestRest.Models;
@model List<BestRest.Models.Review>;

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
  <h3>No reviews have been added yet!</h3>
} 

@foreach (Review review in Model)
{
  <li>@Html.ActionLink($"{review.Name}", "Details", new { id = review.ReviewId }) | @review.Restaurant.Name</li>
  @* <li>@Html.ActionLink($"{review.Name}", "Details", new { id = review.ReviewId | })</li> *@
  @* <li>@review.Name</li> *@
}

<p>@Html.ActionLink("Add new review", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>