@{
  Layout = "_Layout";
}
@model BestRest.Models.Review

<h2>Edit</h2>

<h4>Edit this review: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ReviewId)

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, 
    new {@required="required"})

    @Html.LabelFor(model => model.Title)
    @Html.TextBoxFor(model => model.Title, 
    new {@required="required"})

    @Html.LabelFor(model => model.Content)
    @Html.TextBoxFor(model => model.Content, 
    new {@required="required"})

    @Html.LabelFor(model => model.Restaurant)
    @Html.DropDownList("RestaurantId", null, "Please Select", htmlAttributes: new{required = "Please select a restaurant"})
    
    @Html.LabelFor(model => model.Stars)
    @Html.TextBoxFor(model => model.Stars, 
    new {@required="required", @type = "number", @min = "1", @max = "5"})

    <input class="btn btn-info btn-sm" style="width: 80px" type="submit" value="Save" />
    
}
<br>
<p>@Html.ActionLink("Back to review list", "Index", null, null, new { @class = "btn btn-info btn-sm"} )</p>
