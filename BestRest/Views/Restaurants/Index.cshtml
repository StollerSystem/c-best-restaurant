@{
  Layout = "_Layout";
}

@using BestRest.Models;
@model List<BestRest.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restuarants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Category.Name</li>
}
<br>
@using (Html.BeginForm())
{
  @Html.Label("Filter Restaurants by Name")
  @Html.TextBox("Name")
  <input type="submit" value="Search" class="btn btn-info btn-sm"/> //value is the button text
}
<br>
<p>@Html.ActionLink("Add new restaurant", "Create", null, null, new { @class = "btn btn-info btn-sm" })</p>
<p>@Html.ActionLink("Show all Restaurants", "Index", null, null, new { @class = "btn btn-info btn-sm" })</p>